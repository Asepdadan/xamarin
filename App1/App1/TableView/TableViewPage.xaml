<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.TableView.TableViewPage">
    <ContentPage.Content>
        <TableView Intent="Settings">
            <TableRoot>
                <TableSection Title="Ring" >
                    <SwitchCell Text="New Voice Mail" />
                    <SwitchCell Text="New Mail" On="true" />
                    <EntryCell Text="Nama" Label="Nama" Placeholder="Nama" Keyboard="Plain" />
                    <EntryCell Text="Email" Label="Email" Placeholder="Email" Keyboard="Email" />
                    <EntryCell Text="" Label="No Handphone" Placeholder="No Handphone" Keyboard="Telephone" />
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</ContentPage>